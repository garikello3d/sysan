<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  
<Button
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:text="@string/store_text"
     android:onClick="storeClicked" />
<Button
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:text="@string/exec_text"
     android:onClick="execClicked" />
<Button
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:text="@string/execroot_text"
     android:onClick="execRootClicked" />
<Button
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:text="@string/stop_text"
     android:onClick="stopClicked" />

</LinearLayout>
